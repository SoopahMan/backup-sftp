<odoo>
    <data noupdate="1">
        <record id="ir_cron_db_backup" model="ir.cron">
            <field name="name">Backup Ravi</field>
            <field name="model_id" ref="model_db_backup"/>
            <field name="state">code</field>
            <field name="code">model.action_backup_now()</field>
            <field name="interval_number">1</field>  <!-- Set interval setiap berapa waktu -->
            <field name="interval_type">days</field> <!-- Atur interval dalam satuan waktu (hari, minggu, dll.) -->
            <field name="numbercall">-1</field>  <!-- Set menjadi -1 untuk tidak terbatas -->
            <field name="nextcall">2025-01-01 00:00:00</field> <!-- Waktu pertama kali cron job dijalankan -->
            <field name="active" eval="True"/>  <!-- Menandakan cron job ini aktif -->
            <!-- <field name="activity_user_type">user</field> -->
        </record>
    </data>
</odoo>